<h1 class="title">Your Series</h1>

<% @worlds.each do |world| %>
  <% if world.series.present? %>
    <div class="world-row-index">
      <h2 class="world-title-index">World: <%= world.name %></h2>
      <div class="series-container-index">
        <% world.series.each do |serie| %>
          <div class="series-card-index" onclick="window.location='<%= series_path(serie) %>'">
            <div class="series-name"><%= serie.name %></div>
            <div class="series-world">World: <%= serie.world.name %></div>
            <div class="series-slider">
              <% serie.books.each_with_index do |book, index| %>
                <% break if index > 2 %>
                <div class="series-thumbnail" style="background-image: url('<%= url_for(book.cover) %>');"></div>
              <% end %>
            </div>
          </div>
        <% end %>
        <div class="series-card add-series" onclick="window.location='<%= new_user_series_path(current_user) %>'">
          <span class="plus-sign">+</span>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
